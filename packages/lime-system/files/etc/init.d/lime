START=99
STOP=99
SERVICE_DAEMONIZE=1

log() {
	echo -e "$@" > /dev/console
	echo -e "$@"
}

start() {
	local script
	for script in /etc/lime-defaults/*; do
		log Executing lime-default script $script
		$script
		rm -f $script
	done
	for script in /etc/lime-rc.d/*; do
		$script
	done
}

stop() {
	log Nothing to do
}

restart() {
	stop
	start
}
